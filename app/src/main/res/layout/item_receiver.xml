<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/_10sdp">
<LinearLayout
    android:id="@+id/receiver_shape"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp"
    android:paddingBottom="@dimen/_5sdp"
    android:paddingTop="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:background="@drawable/border_message_receiver">
    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/text_colordark"
        android:fontFamily="@font/baloo_bhai_2_medium"/>
</LinearLayout>
    <TextView
        android:id="@+id/tv_timemessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/receiver_shape"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:text="12:00"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/gray_text97"
        android:visibility="gone"
/>


</RelativeLayout>